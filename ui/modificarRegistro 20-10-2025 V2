  <!-- üß© Script funcional Buscar + Overlay + Llenar formulario -->
  <script>
  (function () {
    const btnBuscar = document.getElementById('btnBuscar');
    const overlay = document.getElementById('overlayResultados');
    const cerrar = document.getElementById('cerrarOverlay');
    const tablaBody = document.querySelector('#tablaResultados tbody');
    const form = document.getElementById('frmNuevoRegistro');

    // üîí Bloquear formulario hasta que se elija un registro
    const toggleForm = (enabled) => {
      [...form.querySelectorAll('input, select, textarea, button')].forEach(el => {
        if (el.id === 'btnLimpiar') return;
        if (el.type === 'hidden') return;
        el.disabled = !enabled;
      });
    };
    toggleForm(false);

    // üîç Buscar por RIF
    if (btnBuscar) {
      btnBuscar.addEventListener('click', () => {
        const rif = document.getElementById('buscarRif').value.trim();
        if (!rif) {
          alert('‚ö†Ô∏è Por favor, ingrese un RIF antes de buscar.');
          return;
        }

        google.script.run
          .withSuccessHandler(function (data) {
            if (!data || data.length === 0) {
              alert('‚ö†Ô∏è No se encontraron registros para el RIF ingresado.');
              return;
            }

            const html = data.map(r => `
              <tr>
                <td>${r.rif || ''}</td>
                <td>${r.cliente || ''}</td>
                <td>${r.region || ''}</td>
                <td>${r.estado || ''}</td>
                <td>${r.contrato || ''}</td>
                <td>${r.numero_servicio_700 || ''}</td>
                <td>${r.situacion_actual || ''}</td>
                <td><button class="btn btn-primary btn-mini btnModificar" data-id="${r.id_registro}">Modificar</button></td>
              </tr>`).join('');

            tablaBody.innerHTML = html;
            overlay.style.display = 'flex';
          })
          .withFailureHandler(err => alert('‚ùå Error al buscar: ' + err.message))
          .getRegistrosPorRif(rif);
      });
    }

    // ‚ùå Cerrar overlay
    if (cerrar) cerrar.addEventListener('click', () => overlay.style.display = 'none');

    // üßæ Cargar datos al formulario (usa la funci√≥n global del script ‚ÄúB‚Äù)
    document.addEventListener('click', (e) => {
      if (e.target.classList.contains('btnModificar')) {
        overlay.style.display = 'none';
        const id = e.target.getAttribute('data-id');
        google.script.run
          .withSuccessHandler((reg) => {
            if (!reg) return alert('‚ùå No se encontr√≥ el registro.');
            if (window.__fillFormFromOverlay) {
              window.__fillFormFromOverlay(reg);
            } else {
              console.warn('‚ö†Ô∏è Funci√≥n __fillFormFromOverlay no encontrada.');
            }
          })
          .withFailureHandler(err => alert('‚ùå Error al cargar registro: ' + err.message))
          .getRegistroPorId(id);
      }
    });
  })();
  </script>

  <!-- üß© Script de listas, validadores y llenado autom√°tico -->
  <script>
  (function(){
    const qs=id=>document.getElementById(id);
    const form=qs('frmNuevoRegistro');

    const elToast={box:null,t:null,m:null,timer:null};
    function setToast(ok,title,msg){
      if(!elToast.box){
        elToast.box=document.getElementById('toast');
        elToast.t=document.getElementById('toastTitle');
        elToast.m=document.getElementById('toastMsg');
      }
      const t=elToast.box;
      t.className='toast '+(ok?'ok':'err');
      elToast.t.textContent=title;
      elToast.m.textContent=msg;
      t.style.display='block';
      clearTimeout(elToast.timer);
      elToast.timer=setTimeout(()=>t.style.display='none',3000);
    }

    const limpiarSelect=sel=>{if(sel)sel.innerHTML='<option value="">Seleccionar‚Ä¶</option>';};
    const poblarSelect=(sel,arr)=>{limpiarSelect(sel);(arr||[]).forEach(v=>{const o=document.createElement('option');o.value=v;o.textContent=v;sel.appendChild(o);});};

    function cargarListasFijas(cb){
      google.script.run.withSuccessHandler(map=>{
        poblarSelect(qs('numero'),map.numero||[]);
        poblarSelect(qs('cod_area'),map.cod_area||[]);
        poblarSelect(qs('modelo_equipo'),map.modelo_equipo||[]);
        poblarSelect(qs('estatus_local'),map.estatus_local||[]);
        poblarSelect(qs('oferta_entregada'),map.oferta_entregada||[]);
        poblarSelect(qs('oferta_aceptada'),map.oferta_aceptada||[]);
        poblarSelect(qs('situacion_abordaje'),map.situacion_abordaje||[]);
        poblarSelect(qs('situacion_actual'),map.situacion_actual||[]);
        poblarSelect(qs('odn'),map.odn||[]);
        if(typeof cb==='function')cb();
      }).getListasFijas();
    }

    function cargarRegiones(cb){
      google.script.run.withSuccessHandler(arr=>{
        poblarSelect(qs('region'),arr||[]);
        if(typeof cb==='function')cb();
      }).getRegiones();
    }

    function onRegionChange(){
      const region=qs('region').value||'';
      limpiarSelect(qs('gerente_region'));
      limpiarSelect(qs('estado'));
      limpiarSelect(qs('municipio'));
      if(!region)return;
      google.script.run.withSuccessHandler(arr=>poblarSelect(qs('gerente_region'),arr||[])).getGerentesPorRegion(region);
      google.script.run.withSuccessHandler(arr=>poblarSelect(qs('estado'),arr||[])).getEstadosPorRegion(region);
    }

    function onEstadoChange(){
      const estado=qs('estado').value||'';
      limpiarSelect(qs('municipio'));
      if(!estado)return;
      google.script.run.withSuccessHandler(arr=>poblarSelect(qs('municipio'),arr||[])).getMunicipiosPorEstado(estado);
    }

    const toTitleCase=s=>(s||'').toLowerCase().replace(/\b\w/g,m=>m.toUpperCase());
    const normalize=s=>(s||'').trim().replace(/\s+/g,' ');
    const mark=(id,ok)=>{
      const input=qs(id),icon=qs('vi_'+id);
      if(!input)return;
      input.classList.remove('is-valid','is-invalid');
      if(ok===true){input.classList.add('is-valid');icon&&(icon.textContent='‚úî',icon.className='vicon ok');}
      else if(ok===false){input.classList.add('is-invalid');icon&&(icon.textContent='‚úñ',icon.className='vicon err');}
      else{icon&&(icon.textContent='');}
    };

    function attachValidation(){
      const camposTexto=['nombre_contacto','cliente','direccion_rif','calle','edificio','piso','local','ciudad','contrato','serial_asignado','equipo'];
      camposTexto.forEach(id=>{
        const n=qs(id);
        if(n)n.addEventListener('blur',()=>{n.value=toTitleCase(normalize(n.value));mark(id,!!n.value);});
      });
      qs('correo')?.addEventListener('blur',()=>{const val=qs('correo').value;mark('correo',!val||/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(val));});
      qs('telefono_completo')?.addEventListener('input',()=>{const t=qs('telefono_completo');t.value=t.value.replace(/[^\d]/g,'').slice(0,7);mark('telefono_completo',t.value.length===7);});
    }

    window.__fillFormFromOverlay=function(reg){
      if(!reg)return;
      cargarListasFijas(()=>cargarRegiones(()=>{}));
      const set=(id,val)=>{const el=qs(id);if(el)el.value=(val??'');};
      for(const k in reg){set(k,reg[k]);}
      attachValidation();
      [...form.querySelectorAll('input,select,textarea,button')].forEach(el=>{if(el.type==='hidden')return;el.disabled=false;});
      setToast(true,'Registro cargado','Puedes editar y guardar cambios.');
      qs('btnGuardar').disabled=false;
    };

    qs('region')?.addEventListener('change',onRegionChange);
    qs('estado')?.addEventListener('change',onEstadoChange);
    cargarListasFijas(()=>cargarRegiones());
    attachValidation();
  })();
  </script>
</body>
</html>
