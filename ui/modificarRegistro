<!-- üîç Script funcional para Buscar y Overlay -->
<script>
(function(){
  const btnBuscar = document.getElementById('btnBuscar');
  const overlay = document.getElementById('overlayResultados');
  const cerrar = document.getElementById('cerrarOverlay');
  const tablaBody = document.querySelector('#tablaResultados tbody');

  // Acci√≥n al presionar Buscar
  if (btnBuscar) {
    btnBuscar.addEventListener('click', () => {
      const rif = document.getElementById('buscarRif').value.trim();

      if (!rif) {
        alert('‚ö†Ô∏è Por favor, ingrese un RIF antes de buscar.');
        return;
      }

      // ‚úÖ En este punto, luego conectaremos la b√∫squeda real a Sheets
      // Por ahora mostramos un resultado simulado para pruebas
      const ejemplo = `
        <tr>
          <td>${rif}</td>
          <td>Cliente Ejemplo, C.A.</td>
          <td>Centro</td>
          <td>Carabobo</td>
          <td>CT-00123</td>
          <td>7001234</td>
          <td>En gesti√≥n</td>
          <td><button class="btn btn-primary btnModificar">Modificar</button></td>
        </tr>
      `;
      tablaBody.innerHTML = ejemplo;
      overlay.style.display = 'flex'; // Mostrar overlay
    });
  }

  // Cerrar overlay con la X
  if (cerrar) {
    cerrar.addEventListener('click', () => {
      overlay.style.display = 'none';
    });
  }

  // Acci√≥n al presionar "Modificar" en el overlay
  document.addEventListener('click', e => {
    if (e.target.classList.contains('btnModificar')) {
      overlay.style.display = 'none';
      // ‚öôÔ∏è Aqu√≠ m√°s adelante cargaremos los datos reales del registro seleccionado
      alert('‚úÖ Aqu√≠ se cargar√°n los datos del registro seleccionado.');
    }
  });
})();
</script>

